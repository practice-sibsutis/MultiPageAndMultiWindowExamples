<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:OpenSaveFileDialogFolderDialogExample.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" Width="450" Height=" 300"
        x:Class="OpenSaveFileDialogFolderDialogExample.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="OpenSaveFileDialogFolderDialogExample">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
	<StackPanel>
        <TextBlock Text="{Binding Path}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		<Button Click="OpenFileDialogButtonClick">Open file dialog</Button>
		<Button Click="SaveFileDialogButtonClick">Save file dialog</Button>
		<Button Click="OpenFolderDialogButtonClick">Open folder dialog</Button>
	</StackPanel>

</Window>
